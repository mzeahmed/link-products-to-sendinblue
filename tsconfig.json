{
  "compilerOptions": {
    "strict": true,
    "outDir": "./resources/build/plugin",
    "noImplicitAny": true,
    "module": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es2021",
    "lib": [
      "es2017",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "skipLibCheck": true
  },
  "include": [
    "./resources/scripts/**/*",
    "./resources/scripts/global.d.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
